#include <mymalloc.h>
e
static Block* head = NULL;
static Block* tail = NULL;
static void* HEAP_END = NULL;

static void setFree(Block* block) {
	(block->header)++;	
}

static void setUsed(Block* block) {
	(block->header)--;
}

void initHeap(void* start, size_t size) {
  // Set static values
  HEAP_START = (header*) start;
  HEAP_END = (char*)start + size;

  // create initial free block
  head = HEAP_START;
  head->header = size;
  head->next = NULL;
  head->prev = NULL;
  setFree(head);

  tail = head;

}
